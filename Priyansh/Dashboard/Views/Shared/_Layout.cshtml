<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Lucide icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body class="bg-gray-200 text-gray-900 transition-colors duration-300 dark:bg-gray-900 dark:text-white">

    <div class="flex flex-col md:flex-row min-h-screen">
        <!-- Sidebar - We will keep this in the layout as it's a shared element -->
        <aside id="sidebar" class="fixed inset-y-0 left-0 w-64 p-6 shadow-xl z-40 transform -translate-x-full md:relative md:translate-x-0 transition-transform duration-300 ease-in-out border-r border-gray-200 bg-white dark:bg-gray-800 dark:border-gray-700">
            <div class="flex items-center space-x-2 mb-8">
                <svg class="lucide lucide-layout-dashboard text-blue-600" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="7" height="9" x="3" y="3" rx="1" /><rect width="7" height="5" x="14" y="3" rx="1" /><rect width="7" height="9" x="14" y="12" rx="1" /><rect width="7" height="5" x="3" y="16" rx="1" /></svg>
                <h1 class="text-xl font-bold text-gray-900 dark:text-white">Admin Panel</h1>
            </div>
            <nav>
                <ul class="space-y-4">
                    <li>
                        <!-- Link to Dashboard page -->
                        <a href="/Dashboard" class="sidebar-link flex items-center space-x-3 p-3 rounded-xl transition-colors duration-200 hover:bg-gray-100 text-gray-700 hover:text-gray-900 dark:hover:bg-gray-700 dark:text-gray-300 dark:hover:text-white">
                            <svg class="lucide lucide-layout-dashboard" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="7" height="9" x="3" y="3" rx="1" /><rect width="7" height="5" x="14" y="3" rx="1" /><rect width="7" height="9" x="14" y="12" rx="1" /><rect width="7" height="5" x="3" y="16" rx="1" /></svg>
                            <span class="font-medium">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <!-- Link to Order page -->
                        <a href="/Order" class="sidebar-link flex items-center space-x-3 p-3 rounded-xl transition-colors duration-200 hover:bg-gray-100 text-gray-700 hover:text-gray-900 dark:hover:bg-gray-700 dark:text-gray-300 dark:hover:text-white">
                            <svg class="lucide lucide-shopping-cart" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="8" cy="21" r="1" /><circle cx="19" cy="21" r="1" /><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" /></svg>
                            <span class="font-medium">Orders</span>
                        </a>
                    </li>
                    <li>
                        <!-- Link to Product page -->
                        <a href="/Product" class="sidebar-link flex items-center space-x-3 p-3 rounded-xl transition-colors duration-200 hover:bg-gray-100 text-gray-700 hover:text-gray-900 dark:hover:bg-gray-700 dark:text-gray-300 dark:hover:text-white">
                            <svg class="lucide lucide-package-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9h18v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9Z" /><path d="M12 3v6" /><path d="M12 3h8a2 2 0 0 1 2 2v2a2 2 0 0 1-2 2h-8a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2Z" /></svg>
                            <span class="font-medium">Products</span>
                        </a>
                    </li>
                    <li>
                        <!-- Link to Sales page -->
                        <a href="/Sales" class="sidebar-link flex items-center space-x-3 p-3 rounded-xl transition-colors duration-200 hover:bg-gray-100 text-gray-700 hover:text-gray-900 dark:hover:bg-gray-700 dark:text-gray-300 dark:hover:text-white">
                            <svg class="lucide lucide-line-chart" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18" /><path d="m18 10-6 6-4-4-5 5" /></svg>
                            <span class="font-medium">Sales</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Charts" class="sidebar-link flex items-center space-x-3 p-3 rounded-xl transition-colors duration-200 hover:bg-gray-100 text-gray-700 hover:text-gray-900 dark:hover:bg-gray-700 dark:text-gray-300 dark:hover:text-white">
                            <svg class="lucide lucide-bar-chart-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 20V10" /><path d="M12 20V4" /><path d="M6 20v-6" /></svg>
                            <span class="font-medium">Charts</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Graphs" class="sidebar-link flex items-center space-x-3 p-3 rounded-xl transition-colors duration-200 hover:bg-gray-100 text-gray-700 hover:text-gray-900 dark:hover:bg-gray-700 dark:text-gray-300 dark:hover:text-white">
                            <svg class="lucide lucide-pie-chart" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.21 15.89A10 10 0 1 1 8 2.83" /><path d="M22 12A10 10 0 0 0 12 2v10Z" /></svg>
                            <span class="font-medium">Graphs</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Mobile Menu Button -->
        <button id="menu-btn" class="md:hidden fixed top-4 left-4 z-50 p-2 bg-white text-gray-900 rounded-md shadow-lg transition-transform duration-300 transform hover:bg-gray-100 border border-gray-300 dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700 dark:border-gray-700">
            <svg class="lucide lucide-menu" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12" /><line x1="4" x2="20" y1="6" y2="6" /><line x1="4" x2="20" y1="18" y2="18" /></svg>
        </button>

        <!-- Main Content Area -->
        <main id="main-content-container" class="flex-1 p-6 md:p-10 transition-all duration-300">
            @RenderBody()
        </main>
    </div>

    <!-- Loading spinner -->
    <div id="loading-spinner" class="fixed inset-0 bg-gray-900 bg-opacity-70 flex justify-center items-center z-50 hidden">
        <div class="animate-spin rounded-full h-32 w-32 border-b-2 border-white"></div>
    </div>

    <!-- Custom JS -->
    <script src="~/js/dashboard.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
