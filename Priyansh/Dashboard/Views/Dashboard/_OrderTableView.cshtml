@model List<dynamic>

<tbody class="bg-white divide-y divide-gray-200">
    @foreach (var order in Model)
    {
        var statusClass = order.Status == "Completed" ? "bg-green-100 text-green-800" :
        order.Status == "Pending" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800";
        <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-600">@order.OrderId</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@order.Customer</td>
            <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusClass">
                    @order.Status
                </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">$@string.Format("{0:0.00}", order.Total)</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@order.Date</td>
        </tr>
    }
</tbody>
