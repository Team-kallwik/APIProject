@{
    ViewBag.Title = "Graphs";
}

<div class="p-6 bg-white rounded-2xl shadow-md border border-gray-300 text-gray-900">
    <h2 class="text-2xl font-bold mb-6 text-gray-900">Graph</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-300 text-gray-900">
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Revenue This Month</h4>
            <div class="w-full h-80">
                <canvas id="chartsRevenueChart"></canvas>
            </div>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-300 text-gray-900">
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Yearly Sales</h4>
            <div class="w-full h-80">
                <canvas id="yearlySalesChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
       const revenueCtx = document.getElementById('chartsRevenueChart');
        if (revenueCtx) {
            new Chart(revenueCtx.getContext('2d'), {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                    datasets: [{
                        label: 'Revenue (Rs)',
                        data: [2000, 2500, 3500, 5200, 3000, 4000, 5500],
                        borderColor: 'rgb(75, 85, 99)',
                        backgroundColor: 'rgba(75, 85, 99, 0.2)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top', labels: { color: 'rgb(75, 85, 99)' } },
                        title: { display: true, text: 'Monthly Revenue', color: 'rgb(75, 85, 99)' }
                    },
                    scales: {
                        y: { beginAtZero: true, ticks: { color: 'rgb(75, 85, 99)' } },
                        x: { ticks: { color: 'rgb(75, 85, 99)' } }
                    }
                }
            });
        }

        const yearlySalesCtx = document.getElementById('yearlySalesChart');
        if (yearlySalesCtx) {
            new Chart(yearlySalesCtx.getContext('2d'), {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Total Revenue (Rs)',
                        data: [2500, 3100, 4200, 3800, 5100, 6000, 5500, 7100, 6800, 7500, 8000, 9200],
                        borderColor: 'rgb(75, 85, 99)',
                        backgroundColor: 'rgba(75, 85, 99, 0.2)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top', labels: { color: 'rgb(75, 85, 99)' } },
                        title: { display: true, text: 'Yearly Sales Performance', color: 'rgb(75, 85, 99)' }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { color: 'rgb(75, 85, 99)' }
                        },
                        x: {
                            ticks: { color: 'rgb(75, 85, 99)' }
                        }
                    }
                }
            });
        }
    });
</script>
